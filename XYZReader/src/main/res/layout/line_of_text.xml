<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/single_text_block"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="@dimen/line_of_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:textColor="@android:color/black"
        android:textColorLink="@color/theme_accent"
        android:background="@color/line_of_text_color"
        android:elevation="@dimen/line_of_text_elevation"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="@dimen/line_of_text_side_padding"
        android:paddingEnd="@dimen/line_of_text_side_padding"
        android:textSize="@dimen/detail_body_text_size"
        tools:text="This is a very long Text, This is a very long Text, This is a very long Text, This is a very long Text, This is a very long Text" />
</FrameLayout>